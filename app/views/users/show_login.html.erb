<% if @error == 1 %>
<p>Login Failed</p>
<% end %> 

<%= form_tag("/users/login", method: "post", id: "loginForm") do %>
  <%= label_tag(:username, "Username") %>
  <%= text_field_tag(:username, nil, required: true) %>
  <%= label_tag(:password, "Password") %>
  <%= password_field_tag(:password, nil, required: true) %>
  <%= submit_tag("Login") %>
<% end %>