<h4>Welcome to filedump</h4>

<% if session[:user] %>
<p> Logged in as <%= session[:user]["username"] %>. <%= link_to 'Log out', '/users/logout' %></p>

<%= form_for @upload do |f| %>
	<%= f.file_field :filename, :required => true %>
	<%= f.submit %>
<% end %>

<h5>Uploads</h5>
<%= render @uploads %>

<% else %>
<p><%= link_to 'Login', '/users/login' %></p>
<% end %>