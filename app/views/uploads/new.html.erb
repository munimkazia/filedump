<h4>Welcome to filedump</h4>

<% if @user_signed_in %>
<p> Logged in as <%= @current_user["email"] %>. <%= link_to 'Log out', '/users/sign_out', method: :delete %></p>

<%= form_for @upload, :url => uploads_path, :html => { :multipart => true } do |f| %>
	<%= f.file_field :upload, required: true %>
	<%= f.submit %>
<% end %>

<h5>Uploads</h5>
<%= render @uploads %>

<% else %>
<p><%= link_to 'Login', '/users/sign_in' %></p>
<p><%= link_to 'Register', '/users/sign_up' %></p>
<% end %>
