<div class="formContainer">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Sign up</h2>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address" %>

  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control register-password", placeholder: "Password" %>

  <%= f.label :password_confirmation, class: "sr-only" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Retype Password" %>

  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>

<% end %>

</div>